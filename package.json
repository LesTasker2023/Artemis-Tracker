{
    "name": "artemis-v3",
    "version": "3.0.0-alpha.1",
    "description": "ARTEMIS v3 - Entropia Universe Activity Tracker",
    "type": "module",
    "main": "dist-electron/main.cjs",
    "author": "Les Tasker",
    "license": "MIT",
    "scripts": {
        "dev": "vite",
        "dev:electron": "concurrently -k \"vite\" \"npm run electron:dev\"",
        "electron:dev": "node scripts/build-electron.mjs && wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
        "build": "tsc && vite build",
        "build:electron": "npm run generate-icons && npm run build && electron-builder",
        "generate-icons": "node scripts/generate-icons.mjs",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --ext ts,tsx",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "dependencies": {
        "electron-updater": "^6.6.2",
        "electron-log": "^5.4.3",
        "lucide-react": "^0.561.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "recharts": "^3.5.1",
        "zod": "^3.22.0",
        "zustand": "^4.4.0"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.18",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.22",
        "concurrently": "^8.2.0",
        "cross-env": "^7.0.3",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.0",
        "esbuild": "^0.19.0",
        "icon-gen": "^5.0.0",
        "jsdom": "^27.3.0",
        "png-to-ico": "^3.0.1",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.3.0",
        "vite": "^5.0.0",
        "vitest": "^4.0.15",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.lest.artemis",
        "productName": "Artemis v3",
        "directories": {
            "buildResources": "build"
        },
        "files": [
            "dist/**",
            "dist-electron/**",
            "node_modules/**",
            "package.json"
        ],
        "publish": [
            {
                "provider": "github"
            }
        ],
        "icon": "build/icon",
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "build/icon.ico"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "build/icon.icns"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "build/icon.png"
        }
    }
}